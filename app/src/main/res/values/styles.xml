<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headline">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="title">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="body1">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="body3">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="subheading">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="caption">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="button">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="Button" parent="button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonFunction" parent="button">
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color2</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--  EditText -->
    <!-- Title, Topic, SubTopic -->
    <style name="OneLineEditText">
        <item name="android:layout_height">47dp</item>
        <item name="android:maxLength">15</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">#2A3038</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/text_color3</item>
        <item name="android:background">@drawable/background_edittext</item>
    </style>

</resources>
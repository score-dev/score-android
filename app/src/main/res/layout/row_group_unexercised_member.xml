<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="23dp"
    android:paddingVertical="15.5dp"
    android:paddingHorizontal="22dp"
    android:background="@drawable/background_grey2_radius15">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_unexercised_member_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_profile_null"
        app:layout_constraintBottom_toBottomOf="@+id/button_baton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_baton" />

    <TextView
        android:id="@+id/textView_nickname"
        style="@style/body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="닉네임"
        app:layout_constraintBottom_toBottomOf="@+id/button_baton"
        app:layout_constraintEnd_toStartOf="@+id/button_baton"
        app:layout_constraintStart_toEndOf="@+id/imageView_unexercised_member_profile"
        app:layout_constraintTop_toTopOf="@+id/button_baton" />

    <TextView
        android:id="@+id/button_baton"
        style="@style/body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_sub_radius10"
        android:paddingHorizontal="17dp"
        android:paddingVertical="13dp"
        android:text="바통 찌르기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
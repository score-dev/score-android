<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:background="@drawable/background_white_radius15">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_graph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_graph"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_graph"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_graph">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_weekly_exercise_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center"
                android:text="주간 운동 거리"
                android:textAlignment="center"
                android:textColor="@color/text_color2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_weekly_exercise_distance_value"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00km"
                android:textAlignment="center"
                android:textColor="@color/text_color1" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grey1" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_weekly_exercise_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"
                android:gravity="center"
                android:text="주간 운동 날짜 수"
                android:textAlignment="center"
                android:textColor="@color/text_color2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_weekly_exercise_days_value"
                style="@style/body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0일"
                android:textAlignment="center"
                android:textColor="@color/text_color1" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
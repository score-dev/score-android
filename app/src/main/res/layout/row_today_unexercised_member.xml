<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_unexercised_member_profile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_profile_null"
        app:layout_constraintBottom_toBottomOf="@+id/button_baton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_baton" />

    <TextView
        android:id="@+id/textView_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="닉네임"
        android:textColor="@color/text_color2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_baton"
        app:layout_constraintEnd_toStartOf="@+id/button_baton"
        app:layout_constraintStart_toEndOf="@+id/imageView_unexercised_member_profile"
        app:layout_constraintTop_toTopOf="@+id/button_baton" />

    <Button
        android:id="@+id/button_baton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="7dp"
        android:backgroundTint="@color/sub"
        android:text="바통찌르기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/background_popup_menu"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#4DABABAB"
    android:outlineProvider="background"
    android:outlineSpotShadowColor="#4DABABAB">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="88dp"
        android:layout_marginVertical="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_menu_feed_delete"
            style="@style/body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="피드 삭제하기"
            android:textColor="@color/red" />
    </LinearLayout>
</LinearLayout>
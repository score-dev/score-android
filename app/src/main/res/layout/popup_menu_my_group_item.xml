<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="12dp"
    android:paddingHorizontal="20dp"
    android:background="@drawable/background_popup_menu"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#4DABABAB"
    android:outlineProvider="background"
    android:outlineSpotShadowColor="#4DABABAB">

    <!-- 친구 초대 메뉴 -->
    <LinearLayout
        android:id="@+id/layout_invite_mate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="180dp"
        android:paddingVertical="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_menu_invite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="친구 초대"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Divider -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:translationZ="1dp"
        app:dividerColor="#E4E4E4" />

    <!-- 그룹 탈퇴 메뉴 -->
    <LinearLayout
        android:id="@+id/layout_group_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="180dp"
        android:paddingVertical="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_menu_withdrawal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="그룹 탈퇴"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>